      <div style="align-self: auto;">
        <div class="row applyform">
          <div class="col-md-9">
            
            <form class="container apply mt-3 mb-3" action="/professor/<%=prof.uid%>/apply" method="POST">
              <h1 style="align-self: center; justify-content: center; display: flex;">Apply Leave</h1>
              <br>
              <br>
              <label for="subject">Subject</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <input type="text" id="subject" placeholder="subject" name="subject" /> <br/>              
              <div class="select-wrapper">
                <label for="type" >Leave Type</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <select name="type" id="type" style="border: 0; outline: 0;">
                  <option value="sick">Sick Leave</option>
                  <option value="casual">Casual Leave</option>
                  <option value="onduty">On Duty Leave</option>
                  <option value="maternity">Maternity Leave</option>
                  <option value="other">Other</option>
              <select/> <br/>
              </div>              
              <label for="from">Leave Start Date</label>&nbsp;&nbsp;&nbsp;&nbsp;
